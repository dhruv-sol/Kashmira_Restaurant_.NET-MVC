@using Kashmira_Restaurant.Models
@model TBLFood
@{
    ViewBag.Title = "Update Dish Specifications";
}

<div align="center">
    @using (Html.BeginForm("Update", "Food", FormMethod.Post))
    {
        <br /><br />
        <label> Dish Name:</label>
        @Html.TextBoxFor(a => a.DishName)

        <label> Cuisine:</label>
        @Html.TextBoxFor(a => a.Cuisine)

        <label> Price:</label>
        @Html.TextBoxFor(a => a.Price)

        <input type="submit" />

        @Html.HiddenFor(a => a.ID_PK)


    }
</div>
